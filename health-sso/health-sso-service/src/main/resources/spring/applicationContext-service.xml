<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.2.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd">

	<context:component-scan
		base-package="com.muyou.sso.service" />
	<!-- 使用dubbo发布服务 -->
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="e3-sso" />
	<dubbo:registry protocol="zookeeper"
		address="192.168.2.120:2181" />
	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20883" />
	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service
		interface="com.muyou.sso.service.CollectService"
		ref="collectServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.ConsultService"
		ref="consultServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.TokenService"
		ref="tokenServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.UserService"
		ref="userServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.FriendshipService"
		ref="friendshipServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.NoticeService"
		ref="noticeServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.MessageService"
		ref="messageServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.AdminService"
		ref="adminServiceImpl" timeout="600000" />
	<dubbo:service
		interface="com.muyou.sso.service.LogService"
		ref="logServiceImpl" timeout="600000" />
	


</beans>