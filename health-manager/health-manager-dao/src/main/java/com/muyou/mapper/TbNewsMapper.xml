  <select id="getAllNotice" resultMap="BaseResultMap">
		SELECT 
			n.id as id,
			n.create_time as create_time,
			n.content as content,
			nu.status as nu_status,
			n.user_type as user_type
	 	from 
	 		tb_news_user nu,tb_news n 
		where 
			user_id=#{userId}
		and 
			create_time	>  #{time} 
		and
			n.id = nu.news_id
		UNION ALL
		SELECT 
			n1.id as id,
			n1.create_time  as create_time,
			n1.content as content,
			"UNREAD" as nu_status,
			"ALL" as user_type
		from
			tb_news n1  
		where 
			user_type = 'ALL' 
		and 
			create_time  > #{time}
		and 
			DATE_SUB(CURDATE(), INTERVAL 7 DAY) <![CDATA[ <= ]]> date(n1.create_time)
	</select> 
  
  
  
  
  
  
  
  
