    	ORDER BY 
    		created DESC
  </select>
  
  <select id="attendListByDate" resultType="com.muyou.vo.AttendListVo" >
     	SELECT
     		s.id id,
			s.name sname,
			u.avatar avator,
			a.type status,
			a.created time,
			s.cname cname,
			s.sex sex
		FROM
			( tb_time_attend ta
			RIGHT JOIN tb_attend a ON a.no = ta.a_no
			RIGHT JOIN tb_student s ON s.id = a.s_id
			RIGHT JOIN tb_user u ON u.no = s.u_id
			)
		WHERE
