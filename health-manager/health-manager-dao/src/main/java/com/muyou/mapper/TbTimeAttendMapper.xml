  <select id="selectAttendListByTid" parameterType="Integer" resultType="com.muyou.vo.AttendVo" >
    	SELECT 
    		u.nickname name,
    		u.avatar avator,
    		a.created time
    	FROM  
    		tb_time_attend ta 
    		RIGHT JOIN tb_attend a on ta.a_no = a.no 
    		RIGHT JOIN tb_student s on s.id = a.s_id 
    		RIGHT JOIN tb_user u on u.no = s.u_id
		WHERE 
			ta.t_id = #{id} 
		and 
			ta.`status` = 1
  </select>
  
  <select id="selectDateListByTid" parameterType="Integer" resultType="com.muyou.vo.AttendDateVo" >
