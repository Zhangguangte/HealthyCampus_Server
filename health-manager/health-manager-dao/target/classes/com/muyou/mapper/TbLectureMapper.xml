	    SELECT 
			l.*
		FROM 
		<if test="cid == -1">
	    	tb_lecture l 
	  	</if>
	  	<if test="cid != -1">
	    	tb_lecture l  ,tb_item_rela_cate r , tb_cate c 
	    WHERE
			l.id = r.item_id and r.cate_id = c.id
		AND  c.id = #{cid}
	  	</if>
	    ORDER BY
	    ${orderCol}
	    ${orderDir}
  	</select>
  	
  	<select id="selectItemByMultiCondition" resultMap="BaseResultMap">
	    SELECT 
			l.*
		FROM 
		<if test="cid == -1">
	    	tb_lecture l
	  	</if>
	  	<if test="cid != -1">
	    	tb_lecture l  RIGHT JOIN  tb_item_rela_cate r ON l.id = r.item_id RIGHT JOIN tb_cate c ON	r.cate_id = c.id
	  	</if>
	  	WHERE (
	  		l.id like #{search} 
